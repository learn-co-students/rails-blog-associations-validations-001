<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
  <h3>Tags:</h3>
  <% if @post.tags!= nil %>
    <% @post.tags.each do |tag| %>
      <%= "#{tag.name}" %> <br>
    <% end %>
  <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
